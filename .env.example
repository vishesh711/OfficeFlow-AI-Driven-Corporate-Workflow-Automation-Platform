# Environment Configuration Example
# Copy this file to .env and fill in the actual values

# Application
NODE_ENV=development
SERVICE_NAME=officeflow-platform

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=officeflow_dev
DB_USER=officeflow
DB_PASSWORD=your_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT_MS=2000
DB_IDLE_TIMEOUT_MS=30000

# Alternative: Use DATABASE_URL instead of individual DB_* variables
# DATABASE_URL=postgresql://officeflow:password@localhost:5432/officeflow_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=officeflow:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=officeflow-platform
KAFKA_GROUP_ID=officeflow-consumers
KAFKA_SSL=false
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_CONNECTION_TIMEOUT=30000
KAFKA_REQUEST_TIMEOUT=30000

# Server Configuration
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MS=86400000

# Observability
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
TRACING_ENABLED=true
JAEGER_ENDPOINT=
TRACING_SAMPLE_RATE=0.1

# External Integrations (to be configured per service)
# Identity Providers
OKTA_DOMAIN=
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
GOOGLE_WORKSPACE_CLIENT_ID=
GOOGLE_WORKSPACE_CLIENT_SECRET=
OFFICE365_TENANT_ID=
OFFICE365_CLIENT_ID=
OFFICE365_CLIENT_SECRET=

# Communication
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=