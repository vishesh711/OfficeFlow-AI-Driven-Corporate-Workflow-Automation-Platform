# OfficeFlow Development Environment Variables
# Copy this file to .env.local for local development

# Database Configuration
DATABASE_URL=postgresql://officeflow:officeflow_dev@localhost:5432/officeflow

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKER_URL=localhost:9092

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=officeflow
MINIO_SECRET_KEY=officeflow_dev

# Service Ports
PORT=3000
AUTH_SERVICE_PORT=3001
IDENTITY_SERVICE_PORT=3002
AI_SERVICE_PORT=3003
EMAIL_SERVICE_PORT=3004
DOCUMENT_SERVICE_PORT=3005
CALENDAR_SERVICE_PORT=3006
SLACK_SERVICE_PORT=3007
WEBHOOK_GATEWAY_PORT=3008

# JWT Configuration
JWT_SECRET=officeflow-dev-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Slack Service Configuration (optional - use placeholder values for development)
SLACK_BOT_TOKEN=xoxb-placeholder-token
SLACK_SIGNING_SECRET=placeholder-signing-secret
SLACK_CLIENT_ID=placeholder-client-id
SLACK_CLIENT_SECRET=placeholder-client-secret
SLACK_REDIRECT_URI=http://localhost:3007/auth/slack/callback

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Development Mode
NODE_ENV=development
LOG_LEVEL=info

# AI Service Configuration (Required for AI features)
# Choose your LLM provider: anthropic, openai, or aws-bedrock
LLM_PROVIDER=anthropic

# Anthropic (Claude) Configuration (Recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# AWS Configuration (For Bedrock and other AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Additional Redis/Kafka configs
REDIS_HOST=localhost
KAFKA_BROKERS=localhost:9092
