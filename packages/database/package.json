{
  "name": "@officeflow/database",
  "version": "1.0.0",
  "description": "Database schema, migrations, and data access layer for OfficeFlow platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest --runInBand",
    "test:unit": "jest --config=jest.unit.config.js",
    "test:integration": "jest --config=jest.config.js",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "migrate": "node dist/migrations/migrate.js",
    "migrate:rollback": "node dist/migrations/rollback.js",
    "seed": "node dist/seeds/seed.js"
  },
  "dependencies": {
    "@officeflow/types": "*",
    "@officeflow/config": "*",
    "pg": "^8.11.0",
    "pg-pool": "^3.6.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ]
}