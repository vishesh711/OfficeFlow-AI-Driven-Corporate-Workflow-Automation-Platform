# AI Service Configuration

# Server Configuration
PORT=3003
HOST=0.0.0.0
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=your_org_id_here
OPENAI_PROJECT=your_project_id_here
OPENAI_DEFAULT_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60000
OPENAI_MAX_RETRIES=3

# Cost Tracking
AI_COST_TRACKING_ENABLED=true
AI_COST_LOG_LEVEL=basic

# Rate Limiting
AI_RATE_LIMIT_REQUESTS=60
AI_RATE_LIMIT_TOKENS=100000

# Caching
AI_CACHING_ENABLED=true
AI_CACHE_TTL_SECONDS=3600

# Database Configuration (inherited from shared config)
DATABASE_URL=postgresql://user:password@localhost:5432/officeflow
DB_HOST=localhost
DB_PORT=5432
DB_NAME=officeflow
DB_USER=officeflow_user
DB_PASSWORD=your_db_password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration (inherited from shared config)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=officeflow:ai:

# Kafka Configuration (inherited from shared config)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-service
KAFKA_GROUP_ID=ai-service-group
KAFKA_SSL=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# JWT Configuration (if needed for authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
JAEGER_ENDPOINT=http://localhost:14268/api/traces