{
  "name": "@officeflow/auth-service",
  "version": "1.0.0",
  "description": "JWT-based authentication service for OfficeFlow platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "PORT=3001 NODE_ENV=development tsx watch --env-file=../../.env src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@officeflow/types": "file:../../packages/types",
    "@officeflow/shared": "file:../../packages/shared",
    "@officeflow/database": "file:../../packages/database",
    "@officeflow/config": "file:../../packages/config",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "rate-limiter-flexible": "^2.4.2",
    "express-rate-limit": "^6.8.1",
    "express-slow-down": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/speakeasy": "^2.0.7",
    "@types/qrcode": "^1.5.1",
    "@types/pg": "^8.10.2",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "tsx": "^4.7.0",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ]
  }
}