# Document Service Configuration
PORT=3004
NODE_ENV=development

# Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_BUCKET=officeflow-documents

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=officeflow-documents

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/officeflow

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=document-service
KAFKA_GROUP_ID=document-service-group

# File Configuration
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv,jpg,jpeg,png,gif,zip,tar,gz
TEMP_DIR=./temp
THUMBNAIL_SIZE=200

# Security
URL_EXPIRY_HOURS=24
ENCRYPTION_KEY=your-32-character-encryption-key