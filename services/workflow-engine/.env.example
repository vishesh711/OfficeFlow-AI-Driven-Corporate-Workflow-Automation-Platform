# Workflow Engine Configuration

# Service Configuration
PORT=3001
NODE_ENV=development
INSTANCE_ID=workflow-engine-1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/officeflow
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=officeflow:

# Redis Cluster Configuration (optional)
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=localhost:7001,localhost:7002,localhost:7003
REDIS_CLUSTER_READY_CHECK=true

# Redis Sentinel Configuration (optional)
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_NODES=localhost:26379,localhost:26380,localhost:26381
REDIS_SENTINEL_NAME=mymaster

# Redis Monitoring
REDIS_METRICS_ENABLED=true
REDIS_METRICS_PREFIX=officeflow_redis

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=workflow-engine
KAFKA_GROUP_ID=workflow-engine-group

# Orchestrator Configuration
MAX_CONCURRENT_WORKFLOWS=100
NODE_EXECUTION_TIMEOUT=300000
WORKFLOW_EXECUTION_TIMEOUT=3600000

# State Management Configuration
WORKFLOW_STATE_TTL=86400
NODE_STATE_TTL=86400
LOCK_TIMEOUT=300
RETRY_SCHEDULE_TTL=604800

# Logging
LOG_LEVEL=info